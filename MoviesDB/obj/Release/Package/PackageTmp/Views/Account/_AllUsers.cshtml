@model IEnumerable<MoviesDB.EF.Users>
@*@model PagedList.<MoviesDB.EF.Users>*@
@*@model X.PagedList.IPagedList< MoviesDB.EF.Users>*@

@using X.PagedList.Mvc


   <div class="mfp-bg my-mfp-zoom-in mfp-ready"></div> 
    <div class="mfp-wrap mfp-close-btn-in mfp-auto-cursor my-mfp-zoom-in mfp-ready" tabindex="-1" style="overflow: hidden auto;">
        <div class="mfp-container mfp-s-ready mfp-inline-holder">
            <div class="mfp-content">
                <div id="popup" class="popup">
                    <div class="popup__content">
                        <div class="popup__close">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M13.41,12l4.29-4.29a1,1,0,0,0-1.41-1.41L12,10.59,7.71,6.29A1,1,0,0,0,6.29,7.71L10.59,12,6.29,16.29a1,1,0,1,0,1.41,1.41L12,13.41l4.29,4.29a1,1,0,0,0,1.41-1.41Z" /></svg>
                        </div>
                        <div class="popup__title">Are you sure you want to delete this movie?</div>
                        <div class="popup__text">This action cannot be undone.</div>
                        <div class="popup__btns">
                            <button class="popup__btn popup__btn--cancel">Cancel</button>
                            <button class="popup__btn popup__btn--delete">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- main content -->
<main class="main">
    <div class="container-fluid">
        <div class="row">
            <!-- main title -->
            <div class="col-12">
                <div class="main__title">
                    <h2>Users</h2>
                    @* Users Number *@
                    <span class="main__title-stat">@Model.Count() - total</span>
                </div>
            </div>
            <!-- end main title -->
            <!-- users -->
            <div class="col-12">
                <div class="main__table-wrap">
                    <table class="main__table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>BASIC INFO</th>
                                <th>USERNAME</th>
                                <th>STATUS</th>
                                @*<th>CRAETED DATE</th>*@
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="main__table-text">@item.Id</div>
                                    </td>
                                    <td>
                                        <div class="main__user">
                                            <div class="main__avatar">
                                                <img src="~/Content/images/user.svg" alt="">
                                            </div>
                                            <div class="main__meta">
                                                <h3>@item.UserName</h3>
                                                <span>@item.Email</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="main__table-text">@item.UserName</div>
                                    </td>
                                    <td>
                                        @*<div class="main__table-text main__table-text--green">
                                                @item.IsActive == true ??"Approved" : "Not Approved"
                                            </div>*@
                                        <div class="main__table-text @(item.IsActive ? "greenText" : "redText")">
                                            @(item.IsActive ? "Approved" : "Not Approved")
                                        </div>
                                    </td>
                                    <td>
                                        <div class="main__table-btns">
                                            @*<a href="#modal-status" class="main__table-btn main__table-btn--banned open-modal">*@
                                            <a id="activateUserBtn" class="main__table-btn main__table-btn--banned activate-user" data-userid="@item.Id" data-isactivated="@item.IsActive">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12,13a1.49,1.49,0,0,0-1,2.61V17a1,1,0,0,0,2,0V15.61A1.49,1.49,0,0,0,12,13Zm5-4V7A5,5,0,0,0,7,7V9a3,3,0,0,0-3,3v7a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V12A3,3,0,0,0,17,9ZM9,7a3,3,0,0,1,6,0V9H9Zm9,12a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V12a1,1,0,0,1,1-1H17a1,1,0,0,1,1,1Z" /></svg>
                                            </a>

                                            @*<a href="edit-user.html" class="main__table-btn main__table-btn--edit">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M22,7.24a1,1,0,0,0-.29-.71L17.47,2.29A1,1,0,0,0,16.76,2a1,1,0,0,0-.71.29L13.22,5.12h0L2.29,16.05a1,1,0,0,0-.29.71V21a1,1,0,0,0,1,1H7.24A1,1,0,0,0,8,21.71L18.87,10.78h0L21.71,8a1.19,1.19,0,0,0,.22-.33,1,1,0,0,0,0-.24.7.7,0,0,0,0-.14ZM6.83,20H4V17.17l9.93-9.93,2.83,2.83ZM18.17,8.66,15.34,5.83l1.42-1.41,2.82,2.82Z" /></svg>
                                                </a>
                                                <a href="#modal-delete" class="main__table-btn main__table-btn--delete open-modal">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z" /></svg>
                                                </a>*@
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        }

                    </table>
                </div>
            </div>
            <!-- end users -->
            <!-- paginator -->
            <div class="col-12">

                @*<div class="paginator">
                        <span class="paginator__pages">Page @Model.PageNumber.ToString() from @Model.PageCount.ToString()</span>

                        <ul class="paginator__paginator">
                            <li>
                                <a href="#">
                                    <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.75 5.36475L13.1992 5.36475" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path><path d="M5.771 10.1271L0.749878 5.36496L5.771 0.602051" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                                </a>
                            </li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li>
                                <a href="#">
                                    <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M13.1992 5.3645L0.75 5.3645" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path><path d="M8.17822 0.602051L13.1993 5.36417L8.17822 10.1271" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                                </a>
                            </li>
                        </ul>
                    </div>*@
            </div>
            <!-- end paginator -->
        </div>
    </div>
</main>
<!-- end main content -->
