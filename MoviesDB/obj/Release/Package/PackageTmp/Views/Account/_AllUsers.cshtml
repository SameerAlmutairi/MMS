<script>
@* 
on click on action button, I want to activate the user and refresh the page *@

 document.getElementById("activateUserBtn").onclick = () => {
        $.ajax({
            type: "POST",
            url: "/Admin/ActivateUser",
            data: { id: 1 },
            success: function (data) {
                location.reload();
            }
        });
    }

</script>

